<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<services>
		<defaults public="true"/>

		<service id="Tests\ThreeBRS\SyliusPacketaPlugin\Behat\Page\Admin\ShippingMethod\UpdatePageInterface"
				 class="Tests\ThreeBRS\SyliusPacketaPlugin\Behat\Page\Admin\ShippingMethod\UpdatePage"
				 parent="sylius.behat.page.admin.crud.update" public="false">
			<argument type="string">sylius_admin_channel_update</argument>
			<argument type="service" id="Sylius\Behat\Service\Helper\AutocompleteHelperInterface" />
		</service>

		<service id="sylius_packeta_plugin.context.ui.admin.shipping_method"
				 class="Tests\ThreeBRS\SyliusPacketaPlugin\Behat\Context\Ui\Admin\ManagingShippingMethodContext">
			<argument type="service"
					  id="Tests\ThreeBRS\SyliusPacketaPlugin\Behat\Page\Admin\ShippingMethod\UpdatePageInterface"/>
			<argument type="service" id="sylius.behat.notification_checker.admin"/>
		</service>

		<service id="sylius_packeta_plugin.context.setup.shipping_method"
				 class="Tests\ThreeBRS\SyliusPacketaPlugin\Behat\Context\Setup\ShippingMethodContext">
			<argument type="service" id="doctrine.orm.entity_manager"/>
			<argument type="service" id="sylius.behat.shared_storage"/>
		</service>

		<service id="sylius_packeta_plugin.context.ui.shop.managing_packeta_context"
				 class="Tests\ThreeBRS\SyliusPacketaPlugin\Behat\Context\Ui\Shop\ManagingPacketaContext">
			<argument type="service"
					  id="Tests\ThreeBRS\SyliusPacketaPlugin\Behat\Page\Shop\Packeta\PacketaPagesInterface"/>
			<argument type="service" id="sylius.behat.context.ui.shop.checkout.shipping"/>
			<argument type="service" id="behat.mink.default_session"/>
			<argument type="service" id="router"/>
		</service>

		<service id="Tests\ThreeBRS\SyliusPacketaPlugin\Behat\Page\Shop\Packeta\PacketaPagesInterface"
				 class="Tests\ThreeBRS\SyliusPacketaPlugin\Behat\Page\Shop\Packeta\PacketaPages"
				 parent="sylius.behat.page.admin.crud.update" public="false">
			<argument type="string">sylius_admin_channel_update</argument>
			<argument type="service" id="Sylius\Behat\Service\Helper\AutocompleteHelperInterface" />
		</service>

	</services>
</container>
